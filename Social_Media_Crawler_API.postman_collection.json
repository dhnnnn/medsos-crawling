		},
		{
			"name": "Processing API (Port 8081)",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8081/health",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8081",
							"path": ["health"]
						},
						"description": "Check if Processing API is running and connected to MySQL"
					},
					"response": []
				},
				{
					"name": "Process Crawled Data",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"job_id\": \"replace-with-actual-job-id\",\n  \"comments\": [\n    {\n      \"comment_id\": \"comment123\",\n      \"username\": \"user1\",\n      \"user_id\": \"user123\",\n      \"text\": \"Great post!\",\n      \"timestamp\": \"2026-02-06T10:00:00Z\",\n      \"likes\": 10,\n      \"replies_count\": 2,\n      \"platform\": \"instagram\",\n      \"parent_comment_id\": null,\n      \"raw_data\": {}\n    }\n  ]\n}"
						},
						"url": {
							"raw": "http://localhost:8081/api/process",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8081",
							"path": ["api", "process"]
						},
						"description": "Process and save crawled comments to database (normally called by Worker)"
					},
					"response": []
				},
				{
					"name": "Get Comments by Job ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8081/api/comments/:job_id",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8081",
							"path": ["api", "comments", ":job_id"],
							"variable": [
								{
									"key": "job_id",
									"value": "replace-with-actual-job-id",
