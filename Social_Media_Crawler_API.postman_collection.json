						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"platform\": \"instagram\",\n  \"target_url\": \"https://instagram.com/p/ABC123example\",\n  \"max_comments\": 100\n}"
						},
						"url": {
							"raw": "http://localhost:8080/api/crawl",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8080",
							"path": ["api", "crawl"]
						},
						"description": "Submit a new crawl job for Instagram post comments"
					},
					"response": []
				},
